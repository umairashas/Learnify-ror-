<h2 class="dashboard-title">Enrolled Students for <%= @course.title %></h2>

<% if @students.any? %>
  <div class="table-container">
    <table class="students-table">
      <thead>
        <tr>
          <th>Sr no.</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone Number</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each_with_index do |student, index| %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= student.user.name %></td>
            <td><%= student.user.email %></td>
            <td><%= student.user.phone_number %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="no-students">No students have enrolled in this course yet.</p>
<% end %>

<div class="btn-container">
  <%= link_to "Back", root_path, class: "btn back-btn" %>
</div>

<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f6f9;
    margin: 0;
    padding: 0;
  }

  .dashboard-title {
    text-align: center;
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
    padding: 15px;
    background: linear-gradient(to right, #2575fc, #6a11cb);
    color: white;
    border-radius: 8px;
    width: 80%;
    margin: 20px auto;
  }

  .table-container {
    display: flex;
    justify-content: center;
    padding: 20px;
  }

  .students-table {
    width: 80%;
    border-collapse: collapse;
    background: white;
    box-shadow: 0 5px 15px gray;
    border-radius: 8px;
    overflow: hidden;
  }

  .students-table th, .students-table td {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  .students-table th {
    background: #2575fc;
    color: white;
    font-size: 16px;
    text-transform: uppercase;
  }

  .students-table tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .students-table tr:hover {
    background-color: #eef1ff;
  }

  .no-students {
    text-align: center;
    font-size: 16px;
    color: #777;
    margin-top: 20px;
  }

  .btn-container {
    display: flex;
    justify-content: center;
    margin-top: 20px;
  }

  .btn {
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
    font-size: 16px;
    text-align: center;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    border: none;
    outline: none;
  }

  .back-btn {
    background-color: #774EA2;
    color: white;
    border: 2px solid #774EA2;
  }

  .back-btn:hover {
    background-color: #9b7dc6;
  }

  @media (max-width: 768px) {
    .students-table {
      width: 100%;
    }

    .dashboard-title {
      width: 100%;
      font-size: 20px;
    }
  }
</style>
