<%= form_with(model: course, local: true) do |form| %>
<%= form.hidden_field :student_id, value: current_user.students.ids %> 
<%= form.hidden_field :teacher_id, value: current_user.teachers.ids %> 
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Course Title" %>
    <%= form.text_field :title, required: true, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description, "Course Description" %>
    <%= form.text_area :description, required: true, rows: 5, class: "form-control" %>
  </div>

  <div>
    <%= form.label :category, "Category" %>
    <%= form.select :category, ["Programming", "Mathematics", "Science", "History"], prompt: "Select a category", class: "form-control" %>
  </div>

  <div>
    <%= form.label :video, "Course Video (MP4)" %>
    <%= form.file_field :video, accept: "video/mp4", class: "form-control" %>  <!-- Video file field with MP4 format validation -->
  </div>

  <div>
    <%= form.submit "Add Course", class: "btn btn-primary" %>
  </div>
<% end %>
