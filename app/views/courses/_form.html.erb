<%= form_with(model: course, local: true) do |form| %>
<%= form.hidden_field :teacher_id, value: current_user.teacher.id %>

  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul>
        <% course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Course Title" %>
    <%= form.text_field :title, required: true, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description, "Course Description" %>
    <%= form.text_area :description, required: true, rows: 5, class: "form-control" %>
  </div>

  <div>
    <%= form.label :category, "Category" %>
    <%= form.select :category, ["Programming", "Mathematics", "Science", "History"], prompt: "Select a category", class: "form-control" %>
  </div><br>

  <div>
    <%= form.label :video, "Course Video (MP4)" %>
    <%= form.file_field :video, accept: "video/mp4", class: "form-control" %>  <!-- Video file field with MP4 format validation -->
  </div>

  <div>
    <%= form.submit "Add New Course", class: "btn btn-primary" %>
  </div>
<% end %>
<style>
/* Form Container */
form {
  background: #f9f9f9;
  border-radius: 8px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600px;
  margin: 0px;
}

/* Form Title */
form h2 {
  text-align: center;
  color: #333;
  margin-bottom: 20px;
}

/* Form Input Fields */
form .form-control {
  width: 100%;
  padding: 12px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
  background-color: #fff;
  transition: border-color 0.3s ease-in-out;
}

form .form-control:focus {
  border-color: #667eea;
  box-shadow: 0 0 5px rgba(102, 126, 234, 0.4);
}

/* Form Labels */
form label {
  display: block;
  font-size: 14px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
}

/* Form Submit Button */
form .btn {
  background-color: #667eea;
  color: white;
  padding: 12px 20px;
  border: none;
  font-size: 16px;
  font-weight: bold;
  border-radius: 5px;
  cursor: pointer;
  width: 100%;
  transition: background-color 0.3s ease-in-out;
}

form .btn:hover {
  background-color: #5645b5;
}

/* Error Messages */
form .error {
  color: red;
  font-size: 14px;
  margin-bottom: 15px;
}

form .error h2 {
  margin-bottom: 10px;
}

/* File Field */
form input[type="file"] {
  padding: 5px;
  margin-top: 10px;
}

/* Responsive Design */
@media (max-width: 768px) {
  form {
    padding: 1.5rem;
  }

  form .form-control {
    padding: 10px;
  }

  form .btn {
    padding: 10px;
  }
}

</style>