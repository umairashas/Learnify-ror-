<div class="course-details">
  <h1 class="course-title"><%= @course.title %></h1>
  <p class="course-description"><%= @course.description %></p>

  <% if @course.video.attached? %>
    <div class="video-container">
      <video id="course-video" width="800" controls controlsList="<%= current_user.teacher? ? '' : 'nodownload' %>">
        <source src="<%= url_for(@course.video) %>" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
  <% end %>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const video = document.getElementById('course-video');
      const isStudent = <%= current_user.student? %>; 

      if (isStudent) {
        video.currentTime = 0;

        // Prevent seeking
        video.addEventListener('seeked', function() {
          if (video.currentTime > 0) {
            video.currentTime = 0; 
          }
        });

        // Prevent skipping
        video.addEventListener('timeupdate', function() {
          if (video.currentTime > 0 && video.seeking) {
            video.currentTime = 0; 
          }
        });

        // Disable right-click to prevent downloading
        video.addEventListener('contextmenu', function(event) {
          event.preventDefault();
        });

        // Mark video as completed when finished
        video.addEventListener('ended', function() {
          fetch("<%= complete_video_course_path(@course) %>", {
            method: "POST",
            headers: { "X-CSRF-Token": "<%= form_authenticity_token %>" }
          }).then(response => response.json())
            .then(data => {
              alert(data.message);
              location.reload(); // Reload to show quizzes
            });
        });
      }
    });
  </script>

  <div class="course-actions">
    <% if current_user.teacher %>
      <%= link_to "Add Quiz for this course", new_course_quiz_path(teacher_id: @teacher, course_id: @course.id), class: "btn btn-quiz" %> |
      <%= link_to "Show all quiz", course_quizzes_path(@course), class: "btn btn-quiz" %>
      | <%= link_to "Edit this course", edit_course_path(@course), class: "btn btn-edit" %> |
      <%= link_to "Back to courses", courses_path, class: "btn btn-back" %> |
      <%= button_to "Destroy this course", @course, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %> 
    <% else %>
      <%= link_to "Back to courses", student_dashboard_path, class: "btn btn-back" %> 
    <% end %>
  </div>
  <% if current_user.student? %>
  <% if session["completed_video_#{@course.id}"] %>
  <% if @course.quizzes.exists? %>
    <h1>Your Quizzes</h1>
    <ul>
      <% @course.quizzes.each do |quiz| %>
        <li>
          <%= link_to "Attempt Quiz: #{quiz.question}", attempt_course_quiz_path(@course, quiz) %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p><strong>The quiz for this course does not exist.</strong></p>
  <% end %>
<% else %>
  <p><strong>Watch the full video to unlock quizzes.</strong></p>
<% end %>
<% end %>
</div>


<style>
  /* Course Details */
.course-details {
  background: #f9f9f9;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 1000px;
  margin: 20px auto;
}

/* Course Title */
.course-title {
  font-size: 28px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Course Description */
.course-description {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Video Container */
.video-container {
  margin-bottom: 20px;
  text-align: center;
}

/* Course Actions */
.course-actions {
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  margin-top: 20px;
}

/* Buttons */
.btn {
  background-color: #667eea;
  color: white;
  padding: 10px 20px;
  border: none;
  font-size: 16px;
  border-radius: 5px;
  cursor: pointer;
  text-decoration: none;
  transition: background-color 0.3s ease;
  margin: 5px;
}

.btn:hover {
  background-color: #5645b5;
}

/* Edit Button */
.btn-edit {
  background-color: #4CAF50;
}

.btn-edit:hover {
  background-color: #45a049;
}

/* Back Button */
.btn-back {
  background-color: #008CBA;
}

.btn-back:hover {
  background-color: #007bb5;
}

/* Destroy Button */
.btn-danger {
  background-color: #f44336;
}

.btn-danger:hover {
  background-color: #d32f2f;
}

</style>