<p style="color: green"><%= notice %></p>

<% content_for :title, "Quizzes" %>

<h1>Quizzes</h1>

<div id="quizzes">
  <% @quizzes.each do |quiz| %>
    <%= render quiz %>
    <p>
      <%= link_to "Show this quiz", quiz %>
    </p>
  <% end %>
</div>

<%= link_to "New quiz", new_quiz_path(student_id: @student.id, teacher_id: @teacher.id, course_id: @course.id), class: "btn btn-primary"  %>
