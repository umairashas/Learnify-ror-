<h1>Quizzes for <%= @course.title %></h1>

<% if @quizzes.present? %>
  <table class="table">
    <thead>
      <tr>
        <th>Sr. No</th>
        <th>Question</th>
        <th>Answer</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @quizzes.each_with_index do |quiz, index| %>
        <% if quiz.course_id == @course.id %> <!-- Ensure only quizzes for this course are shown -->
          <tr>
            <td><%= index + 1 %></td>
            <td><%= quiz.question %></td>
            <td><%= quiz.answer %></td>
            <td>
              <%= link_to "Show", course_quiz_path(@course, quiz), class: "btn btn-info" %>
              <%= link_to "Edit", edit_course_quiz_path(@course, quiz), class: "btn btn-warning" %>
              <%= button_to "Delete", course_quiz_path(@course, quiz), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No quizzes available for this course.</p>
<% end %>

<%= link_to "Add New Quiz", new_course_quiz_path(@course), class: "btn btn-success" %>
<%= link_to "Back to Course", course_path(@course), class: "btn btn-primary" %>
