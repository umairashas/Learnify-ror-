<h1>Quiz Details</h1>

<p><strong>Question:</strong> <%= @quiz.question %></p>

<h2>Options:</h2>
<ul>
  <li><strong>A:</strong> <%= @quiz.option_a %></li>
  <li><strong>B:</strong> <%= @quiz.option_b %></li>
  <li><strong>C:</strong> <%= @quiz.option_c %></li>
  <li><strong>D:</strong> <%= @quiz.option_d %></li>
</ul>

<p><strong>Correct Answer:</strong> <%= @quiz.answer %></p>

<p><strong>Course:</strong> <%= @quiz.course.title if @quiz.course.present? %></p>

<%= link_to "Edit Quiz", edit_course_quiz_path(@quiz.course, @quiz), class: "btn btn-primary" %>
<%= link_to "Back to Course", course_path(@quiz.course), class: "btn btn-secondary" %>
<%= button_to "Delete Quiz", course_quiz_path(@quiz.course, @quiz), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

<%= link_to "Show All Quizzes", course_quizzes_path(@quiz.course), class: "btn btn-info" %>