<% if user_signed_in? %>
  <div class="dashboard">
    <h2>Welcome, <%= current_user.name || current_user.email %>!</h2>
    <div class="btn-group">
      <% if current_user.role == 'teacher' %>
        <div class="button-group">
          <%= link_to "Add Course", new_course_path(teacher_id: current_user.id), class: 'btn btn-primary' %>
          <%= link_to "View All Courses", courses_path, class: 'btn btn-primary' %>
          
        </div>
      <% elsif current_user.role == 'student' %>
        <div class="button-group">
          <%= link_to "Go to Dashboard", student_dashboard_path, class: 'btn btn-primary' %>
          
        </div>
      <% else %>
        <p>No course available.</p>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="landing-page">
    <div class="hero">
      <h1>Welcome to the Learning Platform</h1>
      <p>Join now to explore exciting courses and quizzes!</p>
      <div class="hero-images">
        <div class="image-slider">
          <img src="image.webp" alt="Studying Image" class="hero-image">
          <img src="image2.jpg" alt="Studying Image" class="hero-image">
          <img src="image3.jpg" alt="Studying Image" class="hero-image">
          <img src="image1.webp" alt="Studying Image" class="hero-image">
        </div>
      </div>
    </div>
  </div>
<% end %>

<style>
  body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background: #f4f4f4;
    color: #333;
  }

  .dashboard {
    text-align: center;
    padding: 40px 20px;
    background: linear-gradient(135deg, #2575fc, #6a11cb );
    border-radius: 12px;
    margin: 40px auto;
    max-width: 900px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    color: white;
  }

  .dashboard h2 {
    font-size: 2.2em;
    margin-bottom: 20px;
    font-weight: bold;
  }

  .btn-group {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease-in-out;
    font-size: 16px;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .btn:hover {
    background-color: white;
    color: #2575fc;
    border-color: white;
    transform: translateY(-2px);
  }

  .button-group {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero {
    text-align: center;
    padding: 50px 20px;
    background: linear-gradient(to right, #667eea, #764ba2);
    border-radius: 12px;
    margin-top: 30px;
    width: 100%;
    min-height: 500px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  .hero h1 {
    font-size: 2.5em;
    margin-bottom: 15px;
    font-weight: bold;
    color: white;
  }

  .hero p {
    font-size: 1.2em;
    margin-bottom: 25px;
    color: white;
  }

  .hero-images {
    display: flex;
    justify-content: center;
    overflow: hidden;
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: auto;
  }

  .image-slider {
    display: flex;
    width: 400%;
    animation: slide 12s infinite;
  }

  .hero-image {
    width: 100%;
    max-width: 250px;
    height: auto;
    object-fit: cover;
    border-radius: 10px;
    margin: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  @keyframes slide {
    0% { transform: translateX(0); }
    25% { transform: translateX(-100%); }
    50% { transform: translateX(-200%); }
    75% { transform: translateX(-300%); }
    100% { transform: translateX(0); }
  }

  @media (max-width: 768px) {
    .btn-group {
      flex-direction: column;
      align-items: center;
    }

    .hero h1 {
      font-size: 2em;
    }

    .btn {
      width: 100%;
      margin-bottom: 10px;
    }
  }
</style>