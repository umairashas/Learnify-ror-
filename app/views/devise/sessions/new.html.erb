<% if user_signed_in? %>
  <div class="dashboard">
    <h2>Welcome, <%= current_user.email %> ðŸŽ‰</h2>
    <div class="btn-group">
      <% if current_user.role == 'teacher' || current_user.admin? %>
        <%= link_to "Add Course", new_course_path(teacher_id: current_user.id), class: "btn btn-primary" %>
        <%= link_to "Add Quiz", new_quiz_path(teacher_id: @teacher.id, course_id: @course.id), class: "btn btn-primary" %>
      <% end %>
      <%= link_to "View All Courses", courses_path, class: "btn btn-secondary" %>
      <%= link_to "View All Quizzes", quizzes_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% else %>
  <div class="home-container">
  

    <div class="login-container">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
<% end %>

<style>
  *{
    overflow: hidden;
  }
/* General styles */
body {
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(to right, #667eea, #764ba2);
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  margin-top: 50px;
}

/* Home Container */
.home-container {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30px;
  padding: 40px;
}

/* Hero Section */
.hero {
  background: linear-gradient(135deg, #6a11cb, #2575fc);
  color: white;
  padding: 50px;
  border-radius: 12px;
  max-width: 800px;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
}

.hero h1 {
  font-size: 2.5em;
  margin-bottom: 10px;
}

.hero p {
  font-size: 1.2em;
}

/* Login container */
.login-container {
  background: white;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  width: 350px;
  text-align: center;
}

/* Input fields */
.field {
  margin-bottom: 15px;
  text-align: left;
}

.field label {
  display: block;
  font-weight: 600;
  margin-bottom: 5px;
  color: #333;
}

.field input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
}

/* Submit button */
.actions input[type="submit"] {
  background: #667eea;
  color: white;
  border: none;
  padding: 12px;
  width: 100%;
  font-size: 16px;
  border-radius: 5px;
  cursor: pointer;
  transition: 0.3s;
}

.actions input[type="submit"]:hover {
  background: #5645b5;
}

/* Devise links */
.devise-links {
  margin-top: 15px;
}

.devise-links a {
  text-decoration: none;
  color: #667eea;
  font-weight: bold;
  transition: 0.3s;
}

.devise-links a:hover {
  color: #5645b5;
}

/* Responsive Design */
@media (max-width: 768px) {
  .home-container {
    padding: 20px;
  }

  .hero {
    padding: 30px;
  }

  .login-container {
    width: 90%;
  }
}

</style>